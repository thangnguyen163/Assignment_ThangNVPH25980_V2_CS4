<form asp-action="AddProduct" style="margin-top: 30px; margin-bottom: 30px;" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <div class="mb-3 row" style=" font-size: 13pt;">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Tên sản phẩm</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Name" class="form-control" style="width: 600px;height: 30px;" id="inputPassword">
                    </div>
                </div>
                <div class="mb-3 row" style=" font-size: 13pt;">
                    <label asp-for="Image" class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <div class="mb-3">
                            <input class="form-control" type="file" id="formFile" name="ImageFile" accept="iamges/*" style="width: 63%;">
                        </div>
                    </div>
                </div>
                <div class="mb-3 row" style=" font-size: 13pt;">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Giá bán</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" type="number" class="form-control" style="width: 600px;height: 30px;" id="inputPassword">
                    </div>
                </div>
                <div class="mb-3 row" style=" font-size: 13pt;">
                    <label class="col-sm-2 col-form-label">Thể loại</label>
                    <div class="col-sm-10">

                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                            @foreach (var a in ViewBag.Categories)
                            {
                                <input asp-for="CategoryId" type="radio" class="btn-check" name="CategoryId" id="@a.Id" value="@a.Id">
                                <label asp-for="CategoryId" class="btn btn-outline-primary" for="@a.Id">@a.Name</label>
                            }
                        </div>

                    </div>
                </div>
                <div class="mb-3 row" style=" font-size: 13pt;">
                    <label asp-for="Status" class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-10">
                        <input asp-for="Status" type="number" class="form-control" style="width: 600px;height: 30px;" id="inputPassword">
                    </div>
                </div>
